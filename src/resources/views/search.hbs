<div class="mt-4">
    <form method="POST">

        <div class="form-group">
            <label for="search-input">Tìm kiếm</label>
            <input type="text" name="q" class="form-control" id="search-input" placeholder="Từ khóa...">
        </div>

        <div class="form-group">
            <label for="gender-select">Giới tính</label>
            <select name="gender" id="gender-select" class="form-control">
                <option value="">-- Chọn giới tính --</option>
                <option value="male">Nam</option>
                <option value="female">Nữ</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    </form>
</div>